<div class="player-info-container">
    <div class="profile">
        <img class="sum-icon" src="https://raw.communitydragon.org/latest/plugins/rcp-be-lol-game-data/global/default/v1/profile-icons/{{user.icon}}.jpg" alt="Summoner Icon">
        <h1 class="player-name">{{user.summonerName}}</h1>
    </div>
    <div class="rank">
        <div> 
            <img class="rank-border" src="/img/Emblem_{{user.tier}}.png" alt="Rank border">
            <div class="rank-title">{{user.tier}}</div>
            <div>{{user.rank}}</div>

        </div>
        <div>
            <div class="total-games">{{user.wins}}W {{user.losses}}L</div>
            <div id="wr-t">{{user.wr}}%</div>
        </div>

    </div>
</div>

<div class="tab">
    <div>History</div>
    <div>Champions</div>
</div>
<section>
    <div class="match-history-container">
        <div class="title">Match History</div>
        <ul>
            {{#each games}}
            <li class="match-history">
                <div id="type-of-game">
                    <div><strong>Normal</strong></div>
                    <div id="space">{{timeDiff}}</div>
                    <div><strong>{{win}}</strong></div>
                    <div>{{time.mins}}mins {{time.secs}}seconds</div>
                </div>

                <img 
                class="champion-icon"
                border-radius="50%"
                src="https://cdn.communitydragon.org/11.10.1/champion/{{champion}}/square">

                <div class="player-stats">
                    <div class="calc-kda">{{stats.kda}}:1 KDA</div>
                    <div class="raw-kda">{{stats.kills}} /<span class="deaths"> {{stats.deaths}} </span> / {{stats.assists}}</div>
                </div>
                <div class="player-stats">
                    <div>{{stats.cspm}} CS/Min</div>
                    <div>{{stats.cs}} CS</div>
                </div>
                <div class="player-stats kpa">
                    <div>{{stats.kpa}}% KPA</div>
                    <div>{{stats.kill_assists}}/{{stats.total_team_kills}}</div>
                </div>
                
                <div id="items">
                    {{#each items}}
                        {{#if item}}
                            <img src="http://ddragon.leagueoflegends.com/cdn/{{version}}.1/img/item/{{item}}.png">
                        {{/if}}
                    {{/each}}
                </div>
            </li>
            {{/each}}
        </ul>
        
    </div>
